<body>
    <h1 id="welcome">ASCII Table</h1>
    <p>Here are the ASCII characters you can use with BrainLack!</p>
    <table id="ascii-table">
        <tr>
            <th>ASCII Value</th>
            <th>Character</th>
        </tr>
    </table>

    <script>
        let table = document.getElementById('ascii-table');

        for (let i = 0; i <= 127; i++) {
            let row = document.createElement('tr');

            let cellValue = document.createElement('td');
            cellValue.textContent = i;
            row.appendChild(cellValue);

            let cellChar = document.createElement('td');
            cellChar.textContent = String.fromCharCode(i);
            row.appendChild(cellChar);

            table.appendChild(row);
        }
    </script>
